<sapp>
	<layout
		type='page'
		>		
		<pager
			name='scene_pager' 
			width='fill'
			height='fill'
			swipe='true'
			margin='10%'
		>
			<item>
				<view
					width='fill'
					height='fill'
					background='red'
					/>

			</item>

			<item selected='true'>
				<group
					width='fill'
					height='fill'
					background='green'
				>
					<label width='wrap' height='wrap' alignCenter='true' text='Swipe' fontSize='20%sw'/>
				</group>
			</item>

			<item>
				<view
					width='fill'
					height='fill'
					background='blue'/>
			</item>
		</pager>
		
		<button
			styles='button_back'
			/>
 	</layout>
</sapp>