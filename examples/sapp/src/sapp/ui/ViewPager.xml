<sapp>
	<layout
		type='page'
		background='white'
		>

		<button
			name='btnBack'
			style='button_back'
			/>

		<pager
			name='scene_pager' 
			width='fill'
			height='fill'
			margin='10%'
		>
			<item>
				<view
					background='red'
					/>
			</item>

			<item selected='true'>
				<group
					background='green'
				>
					<label width='wrap' height='wrap' alignCenter='true' text='Swipe' fontSize='20%sw'/>
				</group>
			</item>

			<item>
				<group
					background='blue'
				>
					<button 
						text='Button'
						alignCenter='true'
						width='50%sw'
						height='8%sw'
						fontSize='4%sw'
						background='@color/button_back_color'
						textColor='@color/button_text_color'
						boundRadius='2%sw'
						border='false'
						clipping='true'
						/>
				</group>
			</item>
		</pager>

 	</layout>
</sapp>