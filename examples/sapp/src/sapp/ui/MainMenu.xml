<sapp>
	<layout
		type='page'
		>
		<scroll width='fill' height='fill' horizontal='false'>
			<group width='fill' height='wrap' minHeight='100%vh'>
				<linear
					width='wrap'
					height='wrap'
					alignCenter='true'
					padding='10%smin'
				>

					<button name='btnHelloWorld' text='Hello World' styles='button_normal,menu_button'/>

					<button name='btnViewPager' text='ViewPager' styles='button_normal,menu_button'/>

					<button name='btnVideoView' text='VideoView' styles='button_normal,menu_button'/>

					<button name='btnCameraView' text='CameraView' styles='button_normal,menu_button'/>

					<button name='btnWebView' text='WebView' styles='button_normal,menu_button'/>

					<button name='btnControlScreen' text='Control Screen' styles='button_normal,menu_button'/>

					<button name='btnLoginPage' text='Login Page' styles='button_normal,menu_button'/>

					<button name='btnQRCodeScanner' text='QRCodeScanner' styles='button_normal,menu_button'/>

				</linear>
			</group>
		</scroll>
 	</layout>

	<layout-style
		name='menu_button'
		width='50%smin'
		marginTop='1%smin'
		/>

</sapp>