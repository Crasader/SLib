<sapp>
	<layout
		type='page'
		background='white'
		>
		
		<button
			name='btnBack'
			style='button_back'
			/>

		<QRCodeScanner 
			name='scanner'
			below='btnBack'
			width='fill'
			height='70%'
			autoStart='true'
		>

			<button
				name='btnToggleTorch'
				background='#50000000'
				text='Torch: Off'
				textColorNormal='white'
				alignRight='true'
				margin='10dp'
				fontSize='30dp'			
				/>

		</QRCodeScanner>

		<TextArea
			name='result'
			width='fill'
			height='fill'
			below='scanner'
			background='white'
			fontSize='4%vw'
			text='QR Code'
			readOnly='true'
			/>


 	</layout>
</sapp>