<sapp>
	<layout
		type='page'
		background='white'
		>
		
		<button
			name='btnBack'
			style='button_back'
			/>

		<QRCodeScanner 
			name='scanner'
			below='btnBack'
			width='fill'
			height='70%'
			autoStart='true'
			/>

		<TextArea
			name='result'
			width='fill'
			height='fill'
			below='scanner'
			background='white'
			fontSize='4%vw'
			text='QR Code'
			readOnly='true'
			/>


 	</layout>
</sapp>